{
	"name": "arcus",
	"version": "0.0.1",
	"description": "Native Mod Manager for Linux",
	"main": "main.js",
	"scripts": {
		"start": "electron --disable-gpu .",
		"devStart": "rm -rf ~/.local/share/arcus && electron --disable-gpu .",
		"dist": "electron-builder",
		"buildArch": "rm -f dist/*.pacman && npx electron-builder && pacman -U dist/arcus-*.pacman --noconfirm"
	},
	"repository": "https://github.com/Ashnwor/arcus",
	"keywords": [
		"native",
		"linux",
		"mod",
		"manager",
		"arcus"
	],
	"author": {
		"name": "İlyas Akın",
		"email": "ashnwor@gmail.com"
	},
	"license": "GPL-3.0",
	"build": {
		"appId": "com.ash.arcus",
		"linux": {
			"target": "pacman"
		},
		"protocols": [
			{
				"name": "arcus",
				"schemes": [
					"nxm"
				]
			}
		]
	},
	"devDependencies": {
		"electron": "^7.1.12",
		"electron-builder": "^22.3.2",
		"electron-icon-builder": "^1.0.2",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-import": "^2.20.1",
		"prettier": "^1.19.1"
	},
	"dependencies": {
		"bootstrap": "^4.4.1",
		"custom-electron-titlebar": "^3.2.2",
		"jquery": "^3.4.1",
		"popper.js": "^1.16.1",
		"username": "^5.1.0"
	}
}
